          <% else %>
            <%= link_to bucket["key"], request.params.merge(sector_id: bucket["key"]) %>
          <% end %>
          (<%= bucket["doc_count"] %>)
        </div>
      <% end %>

      <h6> Country </h6>
      <% @circular_initiatives.aggs["Country"]["buckets"].sort_by{ |b| b["key"] }.each do |bucket| %>
        <div>
          <% if params[:Country] == bucket["key"].to_s %>
