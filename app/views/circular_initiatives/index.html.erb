<div class="filter">
  <%= form_tag circular_initiatives_path, method: :get do %>
    <%= label_tag :Region %>
    <%= select_tag "Region", "<option>Africa</option> <option>Asia & Oz</option> <option>Europe</option> <option>Latin America</option> <option>North America</option> <option>Global</option>".html_safe, include_blank: true, multiple:false %>

    <%= label_tag :Country %>
    <%= select_tag(:Country, options_from_collection_for_select(ISO3166::Country.countries.sort_by(&:name), :name, :name, params[:Country]), {include_blank:true})  %>
  
    <%= label_tag :Organization_type %>
    <%= select_tag "Organization_type", "<option>Multinational Corporate</option> <option>National Corporate</option> <option>SME</option> <option>Startup</option> <option>Private sector (undefined)</option> <option>Education</option>".html_safe, include_blank: true, multiple:false %>

    <%= label_tag :sector %>
    <%= select_tag(:sector_id, options_from_collection_for_select(Sector.all, :id, :name, params[:sector_id]), {include_blank:true})  %>
  
    <%= submit_tag "Search", name: nil %>
  <% end %>
</div>

<table class="table table-hover table-condensed table-responsive">
  <thead>
    <tr>
      <th class="center">Name of the initiative</th>
      <th class="center">Initiative description</th>
      <th class="center">Leading organization</th>
      <th class="center">Organization sector</th>
      <th class="center">Organization type</th>
      <th class="center">Website</th>
      <th class="center">Primary strategy</th>
      <th class="center">Region</th>
      <th class="center">Country</th>
      <th class="center">City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @circular_initiatives.each do |circular_initiative| %>
      <tr>
        <td ><%= circular_initiative.Name_of_the_initiative %></td>
        <td class="center" ><%= circular_initiative.Initiative_description %></td>
        <td class="center" ><%= circular_initiative.Leading_organization %></td>
        <td class="center" ><%= circular_initiative.sector.name %></td>
        <td class="center" ><%= circular_initiative.Organization_type %></td>
        <td class="center" ><%= link_to circular_initiative.Website, circular_initiative.Website %></td>
        <td class="center" ><%= circular_initiative.Primary_strategy %></td>
        <td class="center" ><%= circular_initiative.Region %></td>
        <td class="center" ><%= circular_initiative.Country %></td>
        <td class="center" ><%= circular_initiative.City %></td>
        <td class="center" ><%= link_to 'Show', circular_initiative, class: "btn btn-link" %></td>
        <td class="center" ><%= link_to 'Edit', edit_circular_initiative_path(circular_initiative), class: "btn btn-link" %></td>
        <td class="center" ><%= link_to 'Destroy', circular_initiative, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<ul class="pagination justify-content-center">
  <%= will_paginate @circular_initiatives, renderer: BootstrapPagination::Rails %>
</ul>

<%= link_to new_circular_initiative_path, class: "btn btn-success", data: {no_turbolink: true} do %>
  <span class="glyphicon glyphicon-plus"></span> New Circular Initiative
<% end %>
<Br>
<Br>
</div>