          <% end %>
          (<%= bucket["doc_count"] %>)
        </div>
      <% end %>  
    </div>


    


    <div class="index col-sm-10 col-md-10 col-lg-10">
      <div id="index-button" class="new initiative button">
    <%= link_to new_circular_initiative_path, class: "btn btn-default btn-md", data: {no_turbolink: true} do %>
    New Circular Initiative
    <% end %>
  </div>
      <table id="index-table" class="table table-hover table-condensed table-responsive">
        <thead>
          <tr>
            <th class="center">Innovation</th>
            <th class="center">Organization</th>
            <th class="center">Sector</th>
            <th class="center">Website</th>
            <th class="center">Address</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @circular_initiatives.each do |circular_initiative| %>
            <tr>
              <td class><%= link_to circular_initiative.Name_of_the_initiative, circular_initiative %></td>
              <td class="center" ><%= circular_initiative.Leading_organization %></td>
              <td class="center" ><%= circular_initiative.sector.name %></td>
              <td class="center" ><%= link_to circular_initiative.Website, circular_initiative.Website, target: :_blank %></td>
              <td class="center" ><%= circular_initiative.address %></td>
              <td class="center" ><%= link_to 'Learn more', circular_initiative %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @circular_initiatives %>
    </div>
  </div>
</div>



